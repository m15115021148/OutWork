<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_500px_in720p"
    android:layout_marginLeft="@dimen/_100px_in720p"
    android:layout_marginRight="@dimen/_100px_in720p"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:gravity="center"
        android:text="设置数据存储路径\n(默认位置为根目录)"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_60px_in720p"
        android:layout_marginLeft="@dimen/_60px_in720p"
        android:background="#e5e5e5"
        android:paddingTop="@dimen/_10px_in720p"
        android:paddingBottom="@dimen/_10px_in720p"
        >
        <TextView
            android:id="@+id/path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#a5a5a5"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_100px_in720p"
            android:textSize="@dimen/_30px_in720p"
            android:text=""/>
        <TextView
            android:id="@+id/wenjianjia"
            android:layout_width="@dimen/_40px_in720p"
            android:layout_height="@dimen/_35px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/wenjianjia"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200px_in720p"
        android:gravity="center">
        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sure"/>
    </LinearLayout>
</LinearLayout>
