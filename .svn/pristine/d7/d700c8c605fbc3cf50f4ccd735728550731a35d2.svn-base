<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_psw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/task_bg"
    android:orientation="vertical"
    tools:context="com.sitemap.nanchang.activity.ChangePswActivity">

    <include
        android:id="@+id/include_title"
        layout="@layout/include_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:background="@drawable/refund_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_150px_in720p"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:gravity="left"
            android:text="原始密码："
            android:textColor="@color/black_dan" />

        <EditText
            android:id="@+id/change_psw_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入原始密码"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/refund_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_150px_in720p"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:gravity="left"
            android:text="新设密码："
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_30px_in720p" />

        <EditText
            android:id="@+id/change_psw_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入新设密码"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/refund_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/_150px_in720p"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:gravity="left"
            android:text="确认密码："
            android:textColor="@color/black_dan"
            android:textSize="@dimen/_30px_in720p" />

        <EditText
            android:id="@+id/change_psw_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/change_psw_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_marginBottom="@dimen/_40px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_marginTop="@dimen/_40px_in720p"
            android:background="@drawable/bg_blue"
            android:gravity="center"
            android:paddingLeft="@dimen/_40px_in720p"
            android:paddingRight="@dimen/_40px_in720p"
            android:text="提交修改"
            android:textColor="#ffffff"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

</LinearLayout>
