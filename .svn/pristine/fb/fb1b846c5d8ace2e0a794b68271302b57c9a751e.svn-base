    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_400px_in720p"
        android:gravity="center">

        <EditText
            android:id="@+id/zhanghao"
            android:layout_width="@dimen/_540px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@drawable/zhanghaobg"
            android:paddingLeft="@dimen/_80px_in720p"
            android:paddingRight="@dimen/_1px_in720p"
            android:hint="请输入手机号码"
            android:textColor="@color/white"
            android:textSize="@dimen/_25px_in720p" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/zhanghao"
            android:layout_alignLeft="@+id/zhanghao"
            android:layout_marginBottom="@dimen/_15px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:background="@drawable/user"
            android:textSize="@dimen/_25px_in720p" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:gravity="center">

        <EditText
            android:id="@+id/mima"
            android:layout_width="@dimen/_540px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:inputType="textPassword"
            android:background="@drawable/zhanghaobg"
            android:paddingLeft="@dimen/_80px_in720p"
            android:paddingRight="@dimen/_1px_in720p"
            android:hint="请输入密码"
            android:textColor="@color/white"
            android:textSize="@dimen/_25px_in720p" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mima"
            android:layout_alignLeft="@+id/mima"
            android:layout_marginBottom="@dimen/_15px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:background="@drawable/pwd"
            android:textSize="@dimen/_25px_in720p" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_40px_in720p"
        android:gravity="center">
    <TextView
        android:id="@+id/login"
        android:layout_width="@dimen/_540px_in720p"
        android:layout_height="@dimen/_80px_in720p"
        android:gravity="center"
        android:background="@drawable/denglubg"
        android:text="登录"
        android:textColor="@color/title_back_color"
        android:textSize="@dimen/_31px_in720p" />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_20px_in720p"
    android:gravity="center">
    <CheckBox
        android:id="@+id/savePwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="记住密码"/>

</LinearLayout>

</LinearLayout>
