<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_30px_in720p"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingTop="@dimen/_30px_in720p"
        android:text="请选择时间"
        android:textSize="@dimen/_35px_in720p" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:background="@color/lan_dan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400px_in720p"
        android:gravity="center"
        android:orientation="horizontal">

        <com.sitemap.nanchang.view.WheelView
            android:id="@+id/date"
            android:layout_width="@dimen/_200px_in720p"
            android:layout_height="wrap_content" />

        <com.sitemap.nanchang.view.WheelView
            android:id="@+id/time"
            android:layout_width="@dimen/_200px_in720p"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:background="@color/pop_txt_bg" />
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90px_in720p">

        <TextView
            android:gravity="center"
            android:textSize="@dimen/_35px_in720p"
            android:text="取消"
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:layout_width="@dimen/_2px_in720p"
            android:layout_height="match_parent"
            android:background="@color/pop_txt_bg" />

        <TextView
            android:gravity="center"
            android:textSize="@dimen/_35px_in720p"
            android:id="@+id/sure"
            android:text="确定"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />


    </LinearLayout>

</LinearLayout>