<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p">

        <RelativeLayout
            android:layout_toLeftOf="@+id/patch_add"
            android:id="@+id/type_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:id="@+id/status"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/statue_1"
                android:layout_width="@dimen/_30px_in720p"
                android:layout_height="@dimen/_30px_in720p" />

            <TextView
                android:id="@+id/name"
                android:layout_toRightOf="@+id/status"
                android:layout_marginLeft="@dimen/_10px_in720p"
                android:layout_centerVertical="true"
                android:text="类别名称:1111"
                android:singleLine="true"
                android:gravity="left"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:textColor="@color/gray"
                android:textSize="@dimen/_35px_in720p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        


        <TextView
            android:textSize="@dimen/_35px_in720p"
            android:id="@+id/patch_add"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="添加"
            android:textColor="@color/lan_dan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>
    <View
        android:background="#e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"/>


</LinearLayout>